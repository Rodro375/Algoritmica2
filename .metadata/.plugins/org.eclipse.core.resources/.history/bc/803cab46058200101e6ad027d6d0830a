package algo2.semana01.intro;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class BinaryCalculatorTest {
	BinaryCalculator Prueba;
	
	@Test
	void testGetResultadoConOperadorBasico() {
		Prueba = new BinaryCalculator(8, 5, "*"); assertEquals(40, Prueba.getResultado());
		Prueba = new BinaryCalculator(112,7,"/"); assertEquals(16, Prueba.getResultado());
		Prueba = new BinaryCalculator(60,3,"-"); assertEquals(57, Prueba.getResultado());
		Prueba = new BinaryCalculator(265,326,"+"); assertEquals(591, Prueba.getResultado());		
	}
	
	@Test
	void testGetResultadoConOperadorNoValido() {
		Prueba = new BinaryCalculator(8, 5, "$"); assertThrows(RuntimeException.class, () -> Prueba.getResultado());
		Prueba = new BinaryCalculator(112,7,"#"); assertThrows(RuntimeException.class, () -> Prueba.getResultado());
		Prueba = new BinaryCalculator(265,326,")"); assertThrows(RuntimeException.class, () -> Prueba.getResultado());
	}
	
	@Test
	void testGetResultadoConDivisionConCero() {
		Prueba = new BinaryCalculator(1,0,"/"); assertThrows(RuntimeException.class, () -> Prueba.getResultado());
		Prueba = new BinaryCalculator(-1,0,"/"); assertThrows(RuntimeException.class, () -> Prueba.getResultado());
		Prueba = new BinaryCalculator(265,0,"/"); assertThrows(RuntimeException.class, () -> Prueba.getResultado());
	}
}
