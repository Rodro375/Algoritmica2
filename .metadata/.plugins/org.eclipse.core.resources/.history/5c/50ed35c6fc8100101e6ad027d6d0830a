package algo2.semana01.intro;

import jdk.jfr.events.ErrorThrownEvent;

public class BinaryCalculator {
	private int op1;
	private int op2;
	private String operador;
	
	public BinaryCalculator(int op1, int op2, String operador) {
		super();
		this.op1 = op1;
		this.op2 = op2;
		this.operador = operador;
	}

	public int getOp1() {
		return op1;
	}

	public int getOp2() {
		return op2;
	}

	public String getOperador() {
		return operador;
	}
	
	private void getResultado() {
		// TODO Auto-generated method stub
		double result = 0;
		switch (operador) {
		case "+": 
			result = op1+op2;
			break;
		case "-": 
			result = op1-op2;
			break;
		case "*": 
			result = op1*op2;
			break;
		case "/": 
			result = (double)op1/op2;
			break;
		default: 
			throw new RuntimeException("Operador no soportado");
			break;
		}
		default:
			throw new IllegalArgumentException("Unexpected value: " + );
		}
		result result;
	}
}
